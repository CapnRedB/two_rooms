= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :short_desc
    = f.text_area :short_desc
  .field
    = f.label :long_desc
    = f.text_area :long_desc
  .field
    = f.label :color
    = f.select :color, Card::COLORS
  .field
    = f.label :faction
    = f.select :faction, Card::FACTIONS
  .field
    = f.label :strategy
    = f.text_area :strategy
  .field
    = f.label :required_text, "Requires"
    = f.text_area :required_text
  .field
    = f.label :recommended_text, "Recommended"
    = f.text_area :recommended_text
  .field
    = f.label :quantity
    = f.text_field :quantity, type: :number
  .actions
    = f.submit 'Save'
