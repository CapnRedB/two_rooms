!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title TwoRooms
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag    'application'
    = csrf_meta_tags
    %link{ rel: "icon", type: "image/png", href: "/images/bomb.png"}
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1"}
    /%meta{ name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}
  %body
    = bootstrap_flash
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navbar-collapse")
          = link_to "TwoRooms", root_url, class: "navbar-brand"
        #navbar-collapse.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li= link_to "Cards", cards_path
            %li= link_to "Rounds", rounds_path
            - unless current_user.nil?
              %li.dropdown
                = link_to current_user, {:class => "dropdown-toggle", data: {toggle: "dropdown"}} do 
                  = current_user.name || "Profile"
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to "Log out", destroy_user_session_path, method: "delete"


    #container
      #flash
        - unless notice.nil?
          %p#notice= notice
        - unless alert.nil?
          %p#alert= alert

      .container-fluid
        .row
          .col-md-12
            = yield
