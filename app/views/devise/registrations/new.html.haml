.container-fluid
  .row
    .col-md-12.text-center
      %header
        %h1 Sign Up
  .row
    .col-md-12.text-center
      %small Preferred: use an existing account
  = render partial: 'devise/shared/oauth', locals: {providers: [:twitter, :google, :facebook]} 
  .row
    .col-md-12.text-center
      %small or: sign up here

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label :name
      = f.text_field :name, class: "form-control"
      %span.help-block.on-focus Your name will be shown to other players

    .form-group
      = f.label :email, "Email Address"
      = f.text_field :email, class: "form-control"

    .form-group
      = f.label :password
      = f.text_field :password, class: "form-control"

    = f.submit "Create", class: "btn btn-primary"
    = link_to "Back", root_path

  = render "devise/shared/links"