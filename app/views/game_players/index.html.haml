%h1 Listing game_players

%table
  %thead
    %tr
      %th Game
      %th User
      %th Card
      %th Location
      %th Leader
      %th Voting for
      %th
      %th
      %th
      
  %tbody
    - @game_players.each do |game_player|
      %tr
        %td= game_player.game_id
        %td= game_player.user_id
        %td= game_player.card_id
        %td= game_player.location
        %td= game_player.leader
        %td= game_player.voting_for_id
        %td= link_to 'Show', game_player
        %td= link_to 'Edit', edit_game_player_path(game_player)
        %td= link_to 'Destroy', game_player, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

