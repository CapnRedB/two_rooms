= form_for @game_player do |f|
  - if @game_player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game_player.errors.count, "error")} prohibited this game_player from being saved:"
      %ul
        - @game_player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :game_id
    = f.number_field :game_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :card_id
    = f.number_field :card_id
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :leader
    = f.check_box :leader
  .field
    = f.label :voting_for_id
    = f.number_field :voting_for_id
  .actions
    = f.submit 'Save'
