= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :deck_id
    = f.number_field :deck_id
  .field
    = f.label :game_type
    = f.text_field :game_type
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :outcome
    = f.text_area :outcome
  .actions
    = f.submit 'Save'
