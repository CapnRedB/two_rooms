= form_for @swap do |f|
  - if @swap.errors.any?
    #error_explanation
      %h2= "#{pluralize(@swap.errors.count, "error")} prohibited this swap from being saved:"
      %ul
        - @swap.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :round_id
    = f.number_field :round_id
  .field
    = f.label :player_min
    = f.number_field :player_min
  .field
    = f.label :player_max
    = f.number_field :player_max
  .field
    = f.label :count
    = f.number_field :count
  .actions
    = f.submit 'Save'
