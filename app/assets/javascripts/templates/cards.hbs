<div class="container-fluid offset">
	<div class="row">
		<div class="col-md-12 text-center">
			<header><h1>Cards</h1></header>
		</div>
	</div>
	<div class="row actions">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>Title</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{{#each model.cards as |card|}}
						{{#link-to "card" card tagName="tr"}}
							<td>
								<span class="card">
									<span class="color {{card.color}}" data-color="{{card.color}}">
										<span class="faction {{card.faction}}" data-faction="{{card.faction}}" title="{{card.team}}">
											{{card.title}}
										</span>
									</span>
								</span>
								<br />
								<small>{{card.subtitle}}</small>
							</td>
							<td>
								{{#link-to "card" card}}Show{{/link-to}}
							</td>
						{{/link-to}}
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>