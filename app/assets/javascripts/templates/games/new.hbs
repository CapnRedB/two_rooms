<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 text-center">
      <header><h1>New Game</h1></header>
    </div>
  </div>
  <form method="post" action="/decks">
    <div class="form-group">
      <label for="deck">Deck</label>
      {{view "select" content=decks optionLabelPath="content.title" optionValuePath="content.id" selection=model.deck class="form-control" id="deck"}}
      {{#if model.deck}}
        <div>
          Player count {{model.deck.player_count}}
        </div>
        <div>
          <small>{{{model.deck.card_summary}}}</small>
        </div>
        <br />
        <div>
          Rules
          <ul>
            <li>
              {{#if model.deck.bury}}
                Burying a card.
              {{else}}
                No Buried Card.
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}
    
    </div>

    <div class="form-group">
      <label for="game_type">Type</label>
      {{view "select" content=game_types optionLabelPath="content.text" optionValuePath="content.value" value=content.game_type class="form-control" id="game_type"}}

      {{model.game_type}}
    </div>

    <button {{action "create"}} class="btn btn-primary">Create</button>
  </form>
</div>


