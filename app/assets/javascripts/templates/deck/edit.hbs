<div class="container-fluid">
  <form method="post" action="/deck_cards">
    <div class="form-group">
{{!--       {{outlet}}
      {{#unless selectingCard}}
        {{#link-to 'edit_deck_card.cards' model}}Change Card{{/link-to}}
      {{/unless}}
 --}}
 	  	<label for="card">Card</label>
      {{view "select" content=cards optionLabelPath="content.text_id" optionValuePath="content.id" selection=model.card class="form-control" id="card"}}
    </div>

    <div class="form-group">
			<label for="affiliation">Affiliation</label>
			{{view "select" content=affiliations optionLabelPath="content.text" optionValuePath="content.value" value=model.affiliation class="form-control" id="affiliation"}}
		</div>


    <button {{action "save"}} class="btn btn-success">Done</button>
    {{#link-to 'deck' model.deck}}Back{{/link-to}}
  </form>
</div>