<form>		
	<div class="form-group">
		<label for="name">Name</label>
		{{input value=name id="name" class="form-control"}}
		<span class="help-block">Your name will be shown to other players</span>
	</div>
	<button {{action 'save'}} class="btn btn-primary">Save</button>
	{{#unless isNameBlank}}
		<a href="#" {{action 'cancel'}}>Cancel</a>
	{{/unless}}
</form>
<hr />