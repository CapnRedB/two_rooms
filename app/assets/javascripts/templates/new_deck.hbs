<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 text-center">
      <header><h1>New Deck</h1></header>
    </div>
  </div>
  <form method="post" action="/decks">
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" class="form-control" placeholder="Name of your deck"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" type="description" class="form-control" }}
    </div>

    <div class="checkbox">
      <label for="bury">{{input type="checkbox" name="bury" id="bury" checked=bury}} Bury a card?</label>
    </div>

    <button {{action "submit"}} class="btn btn-primary">Create Deck</button>
    {{#link-to 'decks'}}Back{{/link-to}}
  </form>
</div>


